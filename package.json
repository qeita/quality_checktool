{
  "name": "webgl_template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run clean && npm run build",
    "clean": "rimraf _pre/*",
    "copy": "npm-run-all -p copy:img copy:css copy:js",
    "copy:img": "cpx '_dev/assets/img/**/*' _pre/assets/img/ --watch",
    "copy:css": "cpx '_dev/assets/css/**/*' _pre/assets/css/ --watch",
    "copy:js": "cpx '_dev/assets/js/libs/*' _pre/assets/js/libs/ --watch",
    "build": "npm-run-all -p copy build:html build:js serve:init watch",
    "build:html": "pug --hierarchy --pretty -o _pre/ _dev/",
    "build:js": "webpack --config webpack/webpack.dev.js",
    "watch": "npm-run-all -p watch:html watch:js",
    "watch:html": "chokidar '**/*.pug' -c 'npm run build:html'",
    "watch:js": "chokidar '_dev/assets/js/**/*.js' -c 'npm run build:js'",
    "serve:init": "browser-sync start --server --serveStatic _pre/ --files '_pre'",
    "serve:reload": "browser-sync reload",
    "publish": "npm-run-all -p publish:js",
    "publish:js": "webpack --config webpack/webpack.pub.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.18.11",
    "chokidar-cli": "^1.2.0",
    "cpx": "^1.5.0",
    "js-beautify": "^1.6.14",
    "npm-run-all": "^4.0.2",
    "pug": "^2.0.0-rc.1",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.1",
    "webpack": "^2.5.1",
    "webpack-merge": "^4.1.0"
  }
}
